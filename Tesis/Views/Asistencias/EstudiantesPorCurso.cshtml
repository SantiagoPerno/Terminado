@model IEnumerable<Tesis.ViewModels.EstudianteAsistenciaViewModel>

@{
    ViewData["Title"] = "Estudiantes por Curso";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-body">

            <h2 class="mb-4">
                <i class="bi bi-person-lines-fill text-primary me-2"></i>
                Estudiantes del Curso: <span class="text-dark">@ViewBag.CursoNombre</span>
            </h2>

            <!-- Selector de Fecha -->
            <form method="get" asp-action="EstudiantesPorCurso" class="row g-3 align-items-center mb-4">
                <input type="hidden" name="id" value="@ViewBag.CursoId" />
                <div class="col-auto">
                    <label for="fecha" class="col-form-label fw-bold">Seleccionar fecha:</label>
                </div>
                <div class="col-auto">
                    <input type="date" name="fecha" class="form-control" value="@ViewBag.FechaSeleccionada" />
                </div>
                <div class="col-auto">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-search"></i> Buscar
                    </button>
                </div>
            </form>

            <!-- Formulario para guardar asistencias -->
            <form asp-action="GuardarAsistencias" method="post">
                <input type="hidden" name="Fecha" value="@ViewBag.FechaSeleccionada" />
                <input type="hidden" name="CursoId" value="@ViewBag.CursoId" />

                <div class="table-responsive">
                    <table class="table table-bordered align-middle text-center">
                        <thead class="table-light">
                            <tr>
                                <th>Estudiante</th>
                                <th><i class="bi bi-check-circle text-success"></i> Presente</th>
                                <th><i class="bi bi-file-earmark-check text-warning"></i> Ausente Justificado</th>
                                <th><i class="bi bi-file-earmark-excel text-danger"></i> Ausente Injustificado</th>
                                <th><i class="bi bi-clock text-primary"></i> Tardanza 1/4</th>
                                <th><i class="bi bi-clock-history text-secondary"></i> Tardanza 1/2</th>
                                <th><i class="bi bi-clipboard-data"></i> Total Faltas</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Count(); i++)
                            {
                                var estudiante = Model.ElementAt(i);
                                <tr>
                                    <td class="text-start ps-3 fw-semibold">
                                        @estudiante.Nombre @estudiante.Apellido
                                        <input type="hidden" name="Asistencias[@i].Id" value="@estudiante.Id" />
                                    </td>

                                    <td>
                                        <input type="radio" name="Asistencias[@i].Estado" value="Presente" @(estudiante.Estado == "Presente" ? "checked" : "") />
                                    </td>

                                    <td>
                                        <input type="radio" name="Asistencias[@i].Estado" value="AusenteJustificado" @(estudiante.Estado == "AusenteJustificado" ? "checked" : "") />
                                    </td>

                                    <td>
                                        <input type="radio" name="Asistencias[@i].Estado" value="AusenteInjustificado" @(estudiante.Estado == "AusenteInjustificado" ? "checked" : "") />
                                    </td>

                                    <td>
                                        <input type="radio" name="Asistencias[@i].Estado" value="TardanzaUncuarto" @(estudiante.Estado == "TardanzaUncuarto" ? "checked" : "") />
                                    </td>

                                    <td>
                                        <input type="radio" name="Asistencias[@i].Estado" value="TardanzaMedia" @(estudiante.Estado == "TardanzaMedia" ? "checked" : "") />
                                    </td>

                                    <td class="fw-bold">@estudiante.TotalFaltasCalculadas</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="d-flex justify-content-start gap-3 mt-4">
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="bi bi-save2-fill"></i> Guardar
                    </button>
                    <a asp-action="Index" class="btn btn-secondary px-4">
                        <i class="bi bi-arrow-left-circle"></i> Volver
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
