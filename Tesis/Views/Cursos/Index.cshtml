@model IEnumerable<Tesis.Models.Cursos>
@{
    ViewData["Title"] = "Cursos";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="text-dark">
                    <i class="bi bi-mortarboard-fill me-2 text-primary"></i>
                    Cursos
                </h2>
                <a asp-action="Create" class="btn btn-primary rounded-pill px-4">
                    <i class="bi bi-plus-circle-fill me-1"></i> Agregar nuevo curso
                </a>
            </div>

            <div class="table-responsive">
                <table class="table table-striped align-middle">
                    <thead class="table-light">
                        <tr>
                            <th class="fw-semibold">Nombre</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-bold">@Html.DisplayFor(modelItem => item.Nombre)</td>
                                <td class="text-center">
                                    <a asp-action="ListaEstudiantes" asp-route-id="@item.Id" class="btn btn-info text-white rounded-pill btn-sm me-1">
                                        <i class="bi bi-people-fill me-1"></i> Estudiantes
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning text-dark rounded-pill btn-sm me-1">
                                        <i class="bi bi-info-circle-fill me-1"></i> Detalles
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success rounded-pill btn-sm me-1">
                                        <i class="bi bi-pencil-fill me-1"></i> Editar
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger rounded-pill btn-sm">
                                        <i class="bi bi-trash-fill me-1"></i> Eliminar
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
