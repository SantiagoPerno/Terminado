@model Tesis.Models.Cursos

@{
    ViewData["Title"] = "ListaEstudiantes";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<style>
    .table-bordered th,
    .table-bordered td {
        border: 1px solid #555 !important; /* Bordes más visibles */
    }

    .table thead th {
        background-color: #f0f0f0; /* Cabecera más clara */
        font-weight: 600;
        border-bottom: 2px solid #444 !important;
    }

    .table tbody tr:hover {
        background-color: #f9f9f9; /* Efecto al pasar el mouse */
    }

    .table {
        border-collapse: collapse !important;
    }
</style>

<h2 class="mb-3">
    <i class="bi bi-people-fill text-primary me-2"></i>Estudiantes de: @Model.Nombre
</h2>

<div class="mb-4">
    <a asp-action="ExportarEstudiantes" asp-route-id="@Model.Id" class="btn btn-success rounded-pill px-3">
        <i class="bi bi-file-earmark-excel-fill me-1"></i> Exportar a Excel
    </a>
</div>

@if (Model.Estudiantes != null && Model.Estudiantes.Any())
{
    <div class="table-responsive">
        <table class="table table-hover table-bordered align-middle shadow-sm">
            <thead class="table-light">
                <tr class="text-center align-middle">
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>DNI</th>
                    <th>Legajo</th>
                    <th>Email</th>
                    <th>Dirección</th>
                    <th>Altura</th>
                    <th>Padre</th>
                    <th>Tel. Padre</th>
                    <th>Madre</th>
                    <th>Tel. Madre</th>
                    <th>Tutor</th>
                    <th>Tel. Tutor</th>
                    <th>Grupo Sanguíneo</th>
                    
                </tr>
            </thead>
            <tbody>
                @foreach (var estudiante in Model.Estudiantes)
                {
                    <tr>
                        <td>@estudiante.Nombre</td>
                        <td>@estudiante.Apellido</td>
                        <td>@estudiante.DNI</td>
                        <td>@estudiante.Legajo</td>
                        <td>@estudiante.Email</td>
                        <td>@estudiante.Direccion</td>
                        <td>@estudiante.Numero</td>
                        <td>@estudiante.NombrePadre</td>
                        <td>@estudiante.TelefonoPadre</td>
                        <td>@estudiante.NombreMadre</td>
                        <td>@estudiante.TelefonoMadre</td>
                        <td>@estudiante.NombreTutor</td>
                        <td>@estudiante.TelefonoTutor</td>
                        <td>@estudiante.GrupoSanguineo</td>
                        
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-warning">No hay estudiantes en este curso.</div>
}

<div class="d-flex justify-content-start mt-3">
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Volver
    </a>
</div>
