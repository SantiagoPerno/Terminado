@model Tesis.Models.Estudiantes
@{
    ViewData["Title"] = "Detalles del Estudiante";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<div class="container mt-4">
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h4 class="text-primary mb-3">
                <i class="bi bi-person-vcard-fill me-2"></i> Datos personales
            </h4>

            <div class="row mb-3">
                <div class="col-md-6">
                    <strong>Nombre:</strong> @Model.Nombre<br />
                    <strong>Apellido:</strong> @Model.Apellido<br />
                    <strong>DNI:</strong> @Model.DNI<br />
                    <strong>Legajo:</strong> @Model.Legajo<br />
                    <strong>CUIL:</strong> @Model.CUIL<br />
                    <strong>Sexo:</strong> @Model.Sexo
                </div>
                <div class="col-md-6">
                    <strong>Email:</strong> @Model.Email<br />
                    <strong>Dirección:</strong> @Model.Direccion<br />
                    <strong>Altura:</strong> @Model.Numero<br />
                    <strong>Curso:</strong> @Model.CursoId<br />
                    <strong>Teléfono:</strong> @Model.Telefono
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h4 class="text-primary mb-3">
                <i class="bi bi-people-fill me-2"></i> Información de padres y tutores
            </h4>

            <div class="row mb-3">
                <div class="col-md-6">
                    <strong>Nombre del padre:</strong> @Model.NombrePadre<br />
                    <strong>Teléfono del padre:</strong> @Model.TelefonoPadre<br />
                    <strong>Nombre de la madre:</strong> @Model.NombreMadre<br />
                    <strong>Teléfono de la madre:</strong> @Model.TelefonoMadre
                </div>
                <div class="col-md-6">
                    <strong>Nombre del tutor/a:</strong> @Model.NombreTutor<br />
                    <strong>Teléfono del tutor/a:</strong> @Model.TelefonoTutor
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h4 class="text-primary mb-3">
                <i class="bi bi-heart-pulse-fill me-2"></i> Información médica
            </h4>

            <div class="row">
                <div class="col-md-4">
                    <strong>Antitetánica:</strong> @Model.Antitetanica.ToShortDateString()
                </div>
                <div class="col-md-4">
                    <strong>Grupo sanguíneo:</strong> @Model.GrupoSanguineo
                </div>
                <div class="col-md-4">
                    <strong>Total de faltas:</strong> @Model.TotalFaltas
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-start mt-3">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Volver
        </a>
    </div>
</div>
