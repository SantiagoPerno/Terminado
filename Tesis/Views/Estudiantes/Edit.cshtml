@model Tesis.Models.Estudiantes

@{
    ViewData["Title"] = "Editar Estudiante";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-body">
            <h2 class="mb-4 text-primary">
                <i class="bi bi-pencil-fill me-2"></i> Editar Estudiante
            </h2>

            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="Nombre" class="form-label fw-bold">Nombre</label>
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Apellido" class="form-label fw-bold">Apellido</label>
                        <input asp-for="Apellido" class="form-control" />
                        <span asp-validation-for="Apellido" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="DNI" class="form-label fw-bold">DNI</label>
                        <input asp-for="DNI" class="form-control" />
                        <span asp-validation-for="DNI" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Legajo" class="form-label fw-bold">Legajo</label>
                        <input asp-for="Legajo" class="form-control" />
                        <span asp-validation-for="Legajo" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="CursoId" class="form-label fw-bold">Curso</label>
                        <select asp-for="CursoId" class="form-select" asp-items="ViewBag.CursoId">
                            <option value="">-- Selecciona un curso --</option>
                        </select>
                        <span asp-validation-for="CursoId" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Email" class="form-label fw-bold">Email</label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Direccion" class="form-label fw-bold">Dirección</label>
                        <input asp-for="Direccion" class="form-control" />
                        <span asp-validation-for="Direccion" class="text-danger small"></span>
                    </div>

                    <div class="col-md-3">
                        <label asp-for="Numero" class="form-label fw-bold">Altura</label>
                        <input asp-for="Numero" class="form-control" />
                        <span asp-validation-for="Numero" class="text-danger small"></span>
                    </div>

                    <div class="col-md-3">
                        <label asp-for="Telefono" class="form-label fw-bold">Teléfono</label>
                        <input asp-for="Telefono" class="form-control" />
                        <span asp-validation-for="Telefono" class="text-danger small"></span>
                    </div>
                </div>

                <hr class="my-4" />

                <h5 class="text-secondary">
                    <i class="bi bi-person-lines-fill me-2"></i> Información de los Padres/Tutores
                </h5>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="NombrePadre" class="form-label fw-bold">Nombre del padre</label>
                        <input asp-for="NombrePadre" class="form-control" />
                        <span asp-validation-for="NombrePadre" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="TelefonoPadre" class="form-label fw-bold">Teléfono del padre</label>
                        <input asp-for="TelefonoPadre" class="form-control" />
                        <span asp-validation-for="TelefonoPadre" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="NombreMadre" class="form-label fw-bold">Nombre de la madre</label>
                        <input asp-for="NombreMadre" class="form-control" />
                        <span asp-validation-for="NombreMadre" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="TelefonoMadre" class="form-label fw-bold">Teléfono de la madre</label>
                        <input asp-for="TelefonoMadre" class="form-control" />
                        <span asp-validation-for="TelefonoMadre" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="NombreTutor" class="form-label fw-bold">Nombre del tutor/a</label>
                        <input asp-for="NombreTutor" class="form-control" />
                        <span asp-validation-for="NombreTutor" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="TelefonoTutor" class="form-label fw-bold">Teléfono del tutor/a</label>
                        <input asp-for="TelefonoTutor" class="form-control" />
                        <span asp-validation-for="TelefonoTutor" class="text-danger small"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="bi bi-save2 me-1"></i> Guardar cambios
                    </button>
                    <a asp-action="Index" class="btn btn-secondary px-4">
                        <i class="bi bi-arrow-left me-1"></i> Volver
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
